<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navMenuToggler = document.getElementById("navMenuToggler");
    const navMenu = document.getElementById("navMenu");
    const closeMenuButton = document.getElementById("closeMenu");
    const navLinks = document.querySelectorAll(".nav-link");
    const dropdownToggles = document.querySelectorAll(".dropdown-toggle");

    // Abrir menu mobile
    navMenuToggler?.addEventListener("click", () => {
      navMenu?.classList.remove("hidden");
    });

    // Fechar menu ao clicar no botão de fechar
    closeMenuButton?.addEventListener("click", closeMenu);

    function closeMenu() {
      navMenu?.classList.add("hidden");
    }

    // Fechar menu ao clicar em um link (exceto dropdown no mobile)
    navLinks.forEach((link) => {
      link.addEventListener("click", (event) => {
        const isDropdownToggle = link.classList.contains("dropdown-toggle");
        if (isDropdownToggle && window.innerWidth < 768) {
          event.preventDefault(); // Impede comportamento padrão para dropdowns no mobile
          const dropdownMenu = link.nextElementSibling;
          dropdownMenu?.classList.toggle("hidden");
        } else {
          closeMenu();
        }
      });
    });

    // Dropdown hover para desktop
    dropdownToggles.forEach((toggle) => {
      const dropdownMenu = toggle.nextElementSibling;

      toggle.addEventListener("mouseenter", () => {
        if (window.innerWidth >= 768) {
          dropdownMenu?.classList.remove("hidden");
        }
      });

      toggle.parentElement?.addEventListener("mouseleave", () => {
        if (window.innerWidth >= 768) {
          dropdownMenu?.classList.add("hidden");
        }
      });
    });
  });
</script>



